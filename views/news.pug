extends layout

block content
  h1= title
  p Welcome to #{title}

  div
    form(method='get')
      input(type='text' value=search name='search')
      input(type='submit' value='szukaj')


  div(style='height: 20px;')
  each item in data
    article
      h2(class="title")=item.title
      p(class="date")=item.created.toLocaleDateString("pl-PL")
      p=item.description

